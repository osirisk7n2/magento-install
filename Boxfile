web1: 
  name: mag-app 
  shared_writable_dirs:
    - media
    - var
  php_extensions:
    - pdo_mysql
    - mysql
    - simplexml
    - mcrypt
    - hash
    - gd
    - dom
    - iconv
    - curl
    - soap
    - memcache
    - eaccelerator
  after_build:
    # Run script that will generate local.xml config file and place it in app/etc/
    - "php /var/www/pagoda/local_xml_generator.php"
  before_deploy:
  - echo $DB1_HOST $DB1_PORT $DB1_USER $DB1_PASS $DB1_NAME
  - mysql -h $DB1_HOST --port $DB1_PORT -u $DB1_USER -p$DB1_PASS $DB1_NAME < /var/www/pagoda/magento_sample_data_for_1.6.1.0.sql
  php_max_execution_time: 100
db1: #component type & number
  name: mag-db #component settings
  type: mysql
cache1: #component type & number
  name: mag-cache #component settings
  type: memcache